{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["index.d.ts", "next-env.d.ts", "**/*.ts", "**/*.tsx", "src/utils/timer.js", "src/utils/timer.js", "src/utils/Timer.jsx", "src/utils/Timer.jsx", "src/utils/timer.js", "src/utils/timer.js"],
  "exclude": ["node_modules", ".next",],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
